<Window x:Class="AdminClient.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localizations="clr-namespace:AdminClient.Resources.Localizations"
        xmlns:windows="clr-namespace:AdminClient.Code.ViewModels.Windows"
        xmlns:controls="clr-namespace:AdminClient.Controls"
        mc:Ignorable="d"
        Title="{x:Static localizations:StringResources.AdminWindow_Title}"
        MinHeight="500" MinWidth="700"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        
        d:DataContext="{d:DesignInstance windows:AdminWindowViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#1E1E1E">

            <ItemsControl ItemsSource="{Binding LeftMenuItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:LeftMenuItem
                            Title="{Binding Title, Mode=OneWay}"
                            IsSelected="{Binding IsSelected, Mode=OneWay}"
                            ClickCommand="{Binding DataContext.LeftMenuClickCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            ClickCommandParameter="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>

        <Frame
            Grid.Column="1"
            Margin="5,0,0,0"
            NavigationUIVisibility="Hidden"
            Navigated="Frame_OnNavigated"
            
            Source="{Binding SelectedPage.PageUri, Mode=OneWay}"/>

    </Grid>
</Window>
