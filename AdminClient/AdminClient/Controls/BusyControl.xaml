<UserControl x:Class="AdminClient.Controls.BusyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminClient.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <fa:ImageAwesome
        Width="30" Height="30"
        Icon="Spinner" Spin="True"
        Visibility="{Binding IsBusy, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=local:BusyControl}, Converter={StaticResource TrueToVisibleConverter}}"/>
</UserControl>
